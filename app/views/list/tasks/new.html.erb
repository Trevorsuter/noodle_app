<body>
  <section class="container">
    <div class="jumbotron bg-light center-align shadow p-3 mb-5 bg-white rounded">
      <h4 class="welcome-header"><i>New task for <%= @list.name %></i></h4><br>
      <%= form_with model: @task, url: list_tasks_path(@list), local: :true do |f|%>
        <%= f.label :name, "Task:"%> <br>
        <%= f.text_field :name %> <br><br>
        <%= f.label :description, "Description:" %> <small class="text-secondary"><i>optional</i></small> <br>
        <%= f.text_field :description %> <br><br>
        <%= f.label :due, "Due:" %> <small class="text-secondary"><i>optional</i></small>  <br>
        <%= f.date_field :due %> <br><br>
        <%= f.label :status, "Status:" %>
        <%= f.select :status, ['incomplete', 'complete'] %> <br><br>
        <%= f.submit "Create Task" %>
      <% end %>
    </div>
  </section>
</body>