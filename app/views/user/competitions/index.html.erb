<body>
  <div class="card-columns" id="competitions">
    <% @competitions.each do |competition| %>
      <div class="card">
        <div class="card text-center" id="competition-<%= competition.id %>">
          <div class="card-body">
            <div class="card-title btn-group dropend">
              <%= button_to "#{competition.name}", user_competition_path(current_user.id, competition.id), method: :get, class: "btn" %>
              <button type="button" class="btn dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="sr-only">Toggle Dropdown</span>
              </button>
              <ul class="dropdown-menu">
                <li><%= link_to "Delete", competition_path(competition), method: :delete, class: "dropdown-item text-strong" %></li>
                <li><%= %></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</body>