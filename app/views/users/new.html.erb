<header>
  <h1>Welcome to NoodleHub!</h1>
</header>

<body>
  <section class="welcome-login">
    <h3 style="color: lightgray; text-align: center; text-decoration: underline;"><i>We just need a little bit of information from you!</i></h1>
    <div style="text-align: center; color: white; font-weight: bold;">
      <%= form_with model: @user, local: :true do |f|%>
        <%= f.label :name, "Name:" %> <br>
        <%= f.text_field :name %> <br><br>
        <%= f.label :birthday, "Birthday:" %> <br>
        <%= f.date_field :birthday %> <br><br>
        <%= f.label :email, "Email:" %> <br>
        <%= f.email_field :email %> <br><br>
        <%= f.label :password, "Create a password:" %> <br>
        <%= f.password_field :password %> <br><br>
        <%= f.submit "Create your Profile!" %>        
      <% end %>
    </div>
  </section>
</body>