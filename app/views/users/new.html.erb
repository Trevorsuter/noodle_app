
<body>
  <section class="container">
    <div class="jumbotron bg-light center-align shadow p-3 mb-5 bg-white rounded">
      <h3 class="welcome-header"><i>We just need a little bit of information from you!</i></h3>
      <%= form_with model: @user, url: users_path, local: :true do |f|%>
        <%= f.label :name, "Name:" %> <br>
        <%= f.text_field :name %> <br><br>
        <%= f.label :birthday, "Birthday:" %> <br>
        <%= f.date_field :birthday %> <br><br>
        <%= f.label :email, "Email:" %> <br>
        <%= f.email_field :email %> <br><br>
        <%= f.label :password, "Create a password:" %> <br>
        <%= f.password_field :password %> <br><br>
        <%= f.submit "Create your Profile!" %>
      <% end %>
    </div>
  </section>
</body>