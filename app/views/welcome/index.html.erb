<body>
  <section class="container">
    <div class="jumbotron bg-light center-align shadow p-3 mb-5 bg-white rounded">
    <h3 class="welcome-header">Login:</h4>
      <%= form_with url: login_path, local: :true do |f| %>
      <%= f.label :email, "Email: " %> <br>
      <%= f.text_field :email %> <br><br>
      <%= f.label :password, "Password:" %> <br>
      <%= f.password_field :password %> <br><br>
      <%= f.submit :login %>
      <% end %> <br>
      <p>Need an account? <%= link_to "Create one", new_user_path %>.</p>
    </div>
  </section>
</body>